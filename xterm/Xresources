
!
! XTERM
!

!Set $TERM variable
XTerm.termName: xterm-256color
!Use utf8
XTerm.vt100.locale: true

!Make alt behave like in other terminals (^[)
XTerm.vt100.metaSendsEscape: true

!Number of saved lines
XTerm.vt100.saveLines: 4096

!Scrollbar
XTerm.vt100.scrollBar: true
XTerm.vt100.scrollbar.width: 8
XTerm.vt100.rightScrollBar: true

!KEY BINDINGS
XTerm.vt100.translations: #override \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl Shift <Key>C: select-end(SELECT, CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(SELECT, CLIPBOARD)


! Font settings
xterm*faceName: monospace
xterm*faceSize: 12
xterm*renderFont: true
xterm*boldColors: false
xterm*faceSize1: 8
xterm*faceSize2: 10
xterm*faceSize3: 15
xterm*faceSize4: 18.25
xterm*faceSize5: 20.5
xterm*faceSize6: 25.5
xterm*forceBoxChars: false
xterm*limitFontsets: 5
xterm*scaleHeight: 1.0

